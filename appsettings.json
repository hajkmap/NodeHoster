{
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "noderoute": {
        "ClusterId": "nodecluster",
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    },
    "Clusters": {
      "nodecluster": {
        "HttpRequest": {
          "ActivityTimeout": "00:10:00"
        },
        "Destinations": {
          "node": {
            "Address": "http://localhost:3002"
          }
        }
      }
    }
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Yarp": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\log.txt"
        }
      }
    ]
  },
  "ActiveDirectory": {
    "IsActive": true,
    "TrustedUserHeader": "X-Control-Header",
    "OverrideUserWithValue": "",
    "TrustedGroupHeader": "X-Control-Group-Header",
    "OverrideGroupsWithValue": ""
  },
  "UserCache": {
    "TimeOut":  7200
  },
  "NodeHost": {
    "Enabled": "true",
    "MinimumVersion": "20",
    "EntryPoint": "index.js",
    "FolderName": "node_server",
    "InstallNodeModules":  "false"
  }
}
